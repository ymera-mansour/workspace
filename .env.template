# ============================================
# YMERA AI Platform - Environment Configuration
# ============================================
# Copy this file to .env and fill in your API keys
# Never commit .env file to version control

# ============================================
# AI PROVIDER API KEYS
# ============================================

# --- Gemini (Google) ---
# Sign up: https://makersuite.google.com/app/apikey
# Free tier: 60 requests/minute
GEMINI_API_KEY_1=your_gemini_api_key_here
GEMINI_API_KEY_2=  # Optional: Add more for key rotation
GEMINI_API_KEY_3=  # Optional
GEMINI_PROJECT_ID=your_google_project_id  # Optional for advanced features

# --- Mistral AI ---
# Sign up: https://console.mistral.ai/
# Free tier: 1B tokens/month
MISTRAL_API_KEY=your_mistral_api_key_here

# --- Groq ---
# Sign up: https://console.groq.com/
# Free tier: 14,400 requests/day
GROQ_API_KEY=your_groq_api_key_here

# --- OpenRouter ---
# Sign up: https://openrouter.ai/
# Free tier: Multiple free models available
OPENROUTER_API_KEY=your_openrouter_api_key_here

# --- HuggingFace ---
# Sign up: https://huggingface.co/settings/tokens
# Free tier: 20 requests/minute
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# --- Cohere ---
# Sign up: https://dashboard.cohere.com/
# Free tier: 100 API calls/minute
COHERE_API_KEY=your_cohere_api_key_here

# --- Together AI ---
# Sign up: https://api.together.xyz/
# Free tier: $25 monthly credits
TOGETHER_API_KEY=your_together_api_key_here

# --- Anthropic Claude (Optional - Paid) ---
# Sign up: https://console.anthropic.com/
# Note: Paid service, no free tier
ANTHROPIC_API_KEY=  # Optional

# --- Replicate (Optional - Paid) ---
# Sign up: https://replicate.com/
# Note: Paid service, minimal free tier
REPLICATE_API_TOKEN=  # Optional

# ============================================
# MCP TOOLS CONFIGURATION
# ============================================

# --- GitHub ---
# Create token: https://github.com/settings/tokens
# Scope: repo, read:org
GITHUB_TOKEN=your_github_personal_access_token

# --- Brave Search ---
# Sign up: https://brave.com/search/api/
# Free tier: 2,000 queries/month
BRAVE_API_KEY=your_brave_search_api_key

# --- Database Connections ---
POSTGRES_URL=postgresql://localhost:5432/ymera_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=ymera_db

SQLITE_DB_PATH=./data/ymera.db

REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=  # Optional

# --- AWS (for S3 storage) ---
# Free tier: 5GB storage, 20K GET, 2K PUT requests/month
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=ymera-storage

# --- Kubernetes ---
KUBE_CONFIG=~/.kube/config
KUBE_NAMESPACE=default

# --- Email/SMTP ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM=noreply@yourdomain.com

# --- Slack ---
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=your_signing_secret

# --- Discord (Optional) ---
DISCORD_BOT_TOKEN=your_discord_bot_token

# ============================================
# ML/LEARNING TOOLS CONFIGURATION
# ============================================

# --- Weights & Biases ---
# Sign up: https://wandb.ai/
# Free tier: Unlimited projects
WANDB_API_KEY=your_wandb_api_key
WANDB_PROJECT=ymera-ml
WANDB_ENTITY=your_username_or_team

# --- Neptune.ai ---
# Sign up: https://neptune.ai/
# Free tier: 200 hours/month
NEPTUNE_API_TOKEN=your_neptune_api_token
NEPTUNE_PROJECT=workspace/ymera-ml

# --- MLflow ---
MLFLOW_TRACKING_URI=sqlite:///mlflow.db
MLFLOW_ARTIFACT_ROOT=./mlruns

# ============================================
# VECTOR STORES CONFIGURATION
# ============================================

# --- Qdrant ---
# Free tier: 1GB storage
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=  # Optional for cloud

# --- Pinecone ---
# Free tier: 100K vectors
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp

# --- Local Vector Stores (No keys needed) ---
# FAISS and Chroma run locally

# ============================================
# MONITORING & OBSERVABILITY
# ============================================

# --- Prometheus ---
PROMETHEUS_PORT=9090

# --- Grafana ---
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# --- Elasticsearch ---
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# ============================================
# SYSTEM CONFIGURATION
# ============================================

# --- Environment ---
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# --- Application ---
APP_NAME=YMERA
APP_VERSION=1.0.0
APP_PORT=8000

# --- Caching ---
CACHE_ENABLED=true
CACHE_TTL=3600  # seconds
MEMORY_CACHE_SIZE=100  # MB

# --- Rate Limiting ---
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# --- Security ---
SECRET_KEY=your_secret_key_here_min_32_chars
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# --- Timeouts ---
REQUEST_TIMEOUT=30  # seconds
AI_PROVIDER_TIMEOUT=60  # seconds

# ============================================
# OPTIONAL: ADVANCED CONFIGURATION
# ============================================

# --- Custom Model Endpoints (if using self-hosted) ---
CUSTOM_MODEL_ENDPOINT=
CUSTOM_MODEL_API_KEY=

# --- Proxy Configuration ---
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# --- Feature Flags ---
ENABLE_RAG=true
ENABLE_AGENTS=true
ENABLE_MEMORY=true
ENABLE_STREAMING=false
ENABLE_MULTIMODAL=true
