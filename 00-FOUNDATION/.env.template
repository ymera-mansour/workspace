# YMERA Platform Environment Configuration
# =========================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI PROVIDER API KEYS
# =============================================================================

# Gemini (Google AI)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_KEY_2=your_second_gemini_key_optional
GEMINI_API_KEY_3=your_third_gemini_key_optional

# Groq
GROQ_API_KEY=your_groq_api_key_here
GROQ_API_KEY_2=your_second_groq_key_optional

# Mistral AI
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_API_KEY_2=your_second_mistral_key_optional

# OpenRouter
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_API_KEY_2=your_second_openrouter_key_optional

# HuggingFace
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_API_KEY_2=your_second_huggingface_key_optional

# Cohere
COHERE_API_KEY=your_cohere_api_key_here

# Together AI
TOGETHER_API_KEY=your_together_api_key_here

# Anthropic Claude (Optional - Paid)
ANTHROPIC_API_KEY=your_anthropic_api_key_optional

# Replicate (Optional - Paid)
REPLICATE_API_KEY=your_replicate_api_key_optional

# =============================================================================
# DATABASE CONNECTIONS
# =============================================================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=ymera
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DATABASE=ymera_platform

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_optional
REDIS_DB=0

# SQLite
SQLITE_DATABASE_PATH=./ymera_platform.db

# =============================================================================
# VECTOR DATABASES
# =============================================================================

# Qdrant (Optional - 1GB FREE tier)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_optional

# Pinecone (Optional - 100K vectors FREE)
PINECONE_API_KEY=your_pinecone_api_key_optional
PINECONE_ENVIRONMENT=your_pinecone_environment_optional

# =============================================================================
# CLOUD SERVICES (Optional)
# =============================================================================

# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key_optional
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_optional
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_optional

# Google Cloud
GOOGLE_CLOUD_PROJECT=your_gcp_project_optional
GOOGLE_APPLICATION_CREDENTIALS=path/to/gcp/credentials.json_optional

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_ENABLED=true

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password

# Elasticsearch (Optional)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic_optional
ELASTICSEARCH_PASSWORD=your_elasticsearch_password_optional

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=ymera@yourcompany.com

# Slack
SLACK_WEBHOOK_URL=your_slack_webhook_url_optional
SLACK_BOT_TOKEN=your_slack_bot_token_optional

# =============================================================================
# PLATFORM CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# State Management
STATE_DIRECTORY=.ymera_state
STATE_MAX_HISTORY=50

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Caching
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
SEMANTIC_CACHE_THRESHOLD=0.95

# Phase X Validation
PHASE_X_ENABLED=true
PHASE_X_QUALITY_THRESHOLD=7.0
PHASE_X_MIN_ACCURACY=7.0
PHASE_X_MIN_COMPLETENESS=7.0

# Batch Processing
BATCH_MAX_CONCURRENT=10
BATCH_TIMEOUT_SECONDS=300

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_SECONDS=60
CIRCUIT_BREAKER_HALF_OPEN_MAX_CALLS=3

# Silent Monitoring
SILENT_MONITORING_ENABLED=true
MONITORING_SAVE_INTERVAL_SECONDS=300

# =============================================================================
# WORKFLOW SETTINGS
# =============================================================================

# Parallelization
ENABLE_PARALLEL_EXECUTION=true
MAX_PARALLEL_TASKS=5

# Checkpointing
CHECKPOINT_INTERVAL_MINUTES=15
AUTO_SAVE_STATE=true

# Timeouts
PHASE_TIMEOUT_HOURS=12
LAYER_TIMEOUT_MINUTES=30

# =============================================================================
# LOGGING
# =============================================================================

LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=ymera_platform.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# =============================================================================
# SECURITY
# =============================================================================

# Secret key for encryption
SECRET_KEY=your_secret_key_here_change_in_production

# JWT Settings
JWT_SECRET_KEY=your_jwt_secret_key
JWT_EXPIRATION_HOURS=24

# API Security
API_RATE_LIMIT_PER_IP=1000
API_ENABLE_CORS=true
API_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# MCP TOOLS CONFIGURATION
# =============================================================================

# Python MCP
PYTHON_MCP_ENABLED=true

# Node.js MCP
NODEJS_MCP_ENABLED=true
NODEJS_MCP_PATH=/usr/local/bin/node

# Filesystem MCP
FILESYSTEM_MCP_ENABLED=true
FILESYSTEM_MCP_ROOT=./workspace

# Git/GitHub MCP
GIT_MCP_ENABLED=true
GITHUB_TOKEN=your_github_token_optional

# Docker MCP
DOCKER_MCP_ENABLED=true
DOCKER_HOST=unix:///var/run/docker.sock

# Kubernetes MCP
K8S_MCP_ENABLED=false
K8S_CONFIG_PATH=~/.kube/config

# =============================================================================
# ML/LEARNING TOOLS
# =============================================================================

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=ymera_workflow

# Weights & Biases
WANDB_API_KEY=your_wandb_api_key_optional
WANDB_PROJECT=ymera-platform
WANDB_ENTITY=your_wandb_entity_optional

# Neptune.ai
NEPTUNE_API_TOKEN=your_neptune_token_optional
NEPTUNE_PROJECT=your_neptune_project_optional

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable major features
ENABLE_VECTOR_DATABASE=true
ENABLE_SEMANTIC_CACHE=true
ENABLE_CIRCUIT_BREAKER=true
ENABLE_STREAMING=true
ENABLE_BATCH_PROCESSING=true
ENABLE_ANALYTICS_DASHBOARD=true

# Experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Worker settings
MAX_WORKERS=10
WORKER_TIMEOUT_SECONDS=300

# Memory limits
MAX_MEMORY_MB=4096
MEMORY_WARNING_THRESHOLD_PERCENT=80

# Connection pooling
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT_SECONDS=30

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Replace all placeholder values with your actual credentials
# 2. Never commit the .env file to version control
# 3. Keep your API keys secure
# 4. For production, use environment-specific values
# 5. Optional keys can be left empty if not using those services
# 6. FREE tier options are marked with "(Optional - FREE)"
# 7. Paid options are marked with "(Optional - Paid)"
#
# =============================================================================
